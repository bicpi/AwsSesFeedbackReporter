{% extends "base.html.twig" %}

{% block body %}
    {% if complaints %}
        <h2>Complaints</h2>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:400px">Source Email</th>
                    <th>Complained Recipient</th>
                </tr>
            </thead>
            <tbody>
                {% for complaint in complaints %}
                    <tr>
                        <td>
                            <i>{{ complaint.mail_timestamp|date('d.m.Y H:m:s') }}</i><br />
                            <b>{{ complaint.mail_source }}</b><br>
                        </td>
                        <td>
                            <i>{{ complaint.complaint_timestamp|date('d.m.Y H:m:s') }}<br />
                            <b>{{ complaint.complaint_recipient }}</b><br />
                            {{ complaint.complaint_arrivalDate|date('d.m.Y H:m:s')|default('No feedback arrival date available') }}<br />
                            {{ complaint.complaint_complaintFeedbackType|default('No feedback type available') }}<br />
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No complaints available.</p>
    {% endif %}
{% endblock %}
