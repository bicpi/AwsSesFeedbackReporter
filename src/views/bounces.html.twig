{% extends "base.html.twig" %}

{% block body %}
    {% if bounces %}
        <h1>Bounces</h1>
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Raw</th>
                </tr>
            </thead>
            <tbody>
                {% for bounce in bounces %}
                    <tr>
                        <td>{{ bounce.id }}</td>
                        <td>{{ bounce.raw|nl2br }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No bounces available.</p>
    {% endif %}
{% endblock %}
