{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-8">
            <h1>
                Bounces
                <div class="pull-right">
                    <a href="{{ path('bounces', app.request.query.all|merge({'_export': 'detailed'})) }}" class="btn btn-default"><i class="icon-download-alt"></i> Detailed bounces (csv)</a>
                    <a href="{{ path('bounces', app.request.query.all|merge({'_export': 'recipients_only'})) }}" class="btn btn-default"><i class="icon-download-alt"></i> Recipients only (csv)</a>
                </div>
            </h1>
        </div>
        <div class="col-lg-4">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            {% if pagination|length %}
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <tbody>
                    {% for bounce in pagination %}
                        <tr>
                            <td>
                                <p>
                                    <i>Bounced at {{ bounce.bounce_timestamp|date('d.m.Y H:m:s') }} &ndash; {{ bounce.bounce_type }} &gt; {{ bounce.bounce_subType }}</i><br />
                                    <b>{{ bounce.bounce_recipient }}</b><br />
                                    {{ bounce.bounce_diagnosticCode|default('No error message available') }}<br />
                                </p>
                                <p>
                                    <i>Sendout at {{ bounce.mail_timestamp|date('d.m.Y H:m:s') }}</i><br />
                                    <b>{{ bounce.mail_source }}</b><br>
                                </p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% include '_pagination.html.twig' %}
            {% else %}
                <p>No bounces available.</p>
            {% endif %}
        </div>
        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-heading"><b>Filter</b></div>
                <form action="{{ path('bounces') }}" method="get">
                    <div class="form-group">
                        <label for="filter_mail_source">Sender address</label>
                        <input id="filter_mail_source" type="text" value="{{ filter.mail_source|default('') }}" class="form-control" name="filter[mail_source]" placeholder="sendout-id@example.com">
                    </div>
                    <div class="form-group">
                        <label for="filter_bounce_recipient">Bounced recipient</label>
                        <input id="filter_bounce_recipient" type="text" value="{{ filter.bounce_recipient|default('') }}" class="form-control" name="filter[bounce_recipient]" placeholder="bounced-recipient@example.com">
                    </div>
                    <div class="form-group text-right">
                        <a href="{{ path('bounces') }}" class="btn btn-default btn-sm">Reset</a>
                        <button type="submit" class="btn btn-primary btn-sm">Filter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}
